.container{
    height: 100%;
    position: relative;
    z-index: 999;
}
.bgImg{
    position: absolute;
    z-index: 1;
    height: 100%;
    width: 100%;
    background-size:cover;
    background-repeat: no-repeat;
    filter: blur(200rpx)brightness(60%);
}
.songInfo{
    position: absolute;
    width: 100%;
    height: 50rpx;
    top: 6vh;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    z-index: 999;
}
.title{
    color: white;
    margin-bottom: 10rpx;
    font-size: 38rpx;
}
.singer{
    font-size: 26rpx;
    color: #525050;
}
.discContainer{
    position: relative;
    width: 100%;
    height: 500rpx;
    top:26vh;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 999;
}
.disc{
    width: 500rpx;
    height: 500rpx;
    position: absolute;
    animation-name: rotate;
    animation-duration: 15s;
    animation-iteration-count:infinite;
    animation-timing-function: linear;
    animation-fill-mode: forwards;

}
.discContainer .coverPic{
    width: 300rpx;
    height: 300rpx;
    border-radius: 50%;
    transform: translateX(-300px);
}
.lastPic{
    width: 300rpx;
    height: 300rpx;
    border-radius: 50%;
    transition: all .5s linear;
    transform: translateX(-500rpx);
}
.bottom{
    width: 75rpx;
    height: 75rpx;
    border-radius: 50%;
    background-color: #e5e5e5;
    position: absolute;
    top: -160rpx;
    z-index: 99;
}
.needle{
    width: 192rpx;
    height: 274rpx;
    position: absolute;
    left:calc(50% - 45rpx);
    top: -130rpx;
    transition: transform 1s;
    transform-origin: 10rpx top;
    z-index: 1;
    transform: rotate(-20deg);
}
.needleRotate{
    transform: rotate(0deg)
}
@keyframes rotate {
    from{
        transform: rotateZ(0deg);
    }
    to{
        transform: rotateZ(360deg);
    }
}
@keyframes move {
    from{
        transform: rotateZ(-20deg);
    }
    to{
        transform: rotateZ(0deg);
    }
}

.playArea{
    position: absolute;
    bottom: 50rpx;
    width: 100% ;
    display: flex;
    justify-content: space-evenly;
    align-items: center;
    padding: 20rpx 0;
    z-index: 999;
}
.playArea .iconfont{
    font-size: 55rpx;
    color: white;
}
.playArea .big{
    font-size: 80rpx;
    color: white;
}
