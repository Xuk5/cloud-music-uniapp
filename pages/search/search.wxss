
.container{
    height: 2260rpx;
    position: relative;
    background-color: #eee;
}
.searchHeader{
    width: 100% ;
    height: 100rpx;
    position: fixed;
    top: 10vh;
    padding: 20rpx 30rpx;
    display: flex;
    justify-content: space-between;
    box-sizing: border-box;
    background-color: skyblue;
    z-index: 999;
}
.full{
    width: 100%;
    height: 100%;
    background-color: white;
}
.input{
    width: 85%;
    height: 100%;
    background-color: #e8e5e5;
    border-radius: 30rpx;
    padding:0 60rpx;
    font-size: 28rpx;
}
.clear{
    width: 60rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    position: absolute;
    right: 120rpx;
    font-size: 45rpx;
}
.history{
    position: relative;
    width: 100%;
}
.history .iconfont{
    position: absolute;
    right: 10rpx;
    color: gray;
}
.history >text{
    font-weight: bold;
}
.searchAdvice{
    width: 100%;
    height: calc(100vh - 210rpx);
    background-color: white;
    margin-top: 200rpx;
    padding: 20rpx 0;
    box-sizing: border-box;

}
.adviceItem{
    height: 80rpx;
    line-height: 80rpx;
    width: 100%;
    display: flex;
    padding: 5rpx 0 ;
}
.adviceItem > .iconfont{
    width: 60rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    margin-right: 20rpx;
    color: gray;
}
.adviceItem > text:last-of-type{
    width: 100%;
    margin-left: 60rpx;
    border-bottom: 2rpx solid #bbb9b9;

}
.searchBtn{
    padding: 0;
    margin: 0;
    width: 100rpx;
    font-size: 28rpx;
    background-color: skyblue;
    line-height: 60rpx;
}
.searchBtn::after{
    border: none;
}
.icon-search{
    position: absolute;
    height: 60rpx;
    width: 60rpx;
    line-height: 60rpx;
    text-align: center;
}
.searchArea{
    width: 100%;
    position: absolute;
    top: 17vh;
    padding: 20rpx 30rpx 0 30rpx;
    z-index: 10;
    background-color: #eee;
    box-sizing: border-box;
}
.searchHistory{
    display: flex;
    flex-wrap: wrap;
    justify-content: start;
    padding: 20rpx 0;
}
.searchList{
    height: 1700rpx;
    margin-top: 15rpx;
}
.searchHistory > view{
    height: 30rpx;
    background-color: white;
    padding: 10rpx 30rpx;
    font-size: 25rpx;
    margin: 10rpx 20rpx 10rpx 0;
    border-radius: 30rpx;
    color: #676767;
}

.swiperItem{
    display: block;
    box-sizing: border-box;
    padding: 20rpx 30rpx;
    background-color: white;
    border-radius: 20rpx;
}
.swiper-header{
    display: flex;
    height: 80rpx;
    align-items: center;
    width: 100%;
    justify-content: space-between;
    border-bottom: 2rpx solid #eee;
}
.swiper-header>text{
    font-weight: bold;
    font-size: 35rpx;
}
.playAll{
    padding: 0;
    margin: 0;
    width: 100rpx;
    height: 50rpx;
    line-height: 50rpx;
    font-size: 24rpx;
    border-radius: 40rpx;
    background-color: white;
}
.playAll::after{
    border:5rpx solid #eee;
}
.songList{
    padding: 20rpx 0 0 0;
    box-sizing: border-box;
}
.song{
    display: flex;
    align-items: center;
    font-size: 26rpx;
    height: 80rpx;
}
.songList > view:first-of-type .title,
.songList > view:nth-of-type(2) .title,
.songList > view:nth-of-type(3) .title{
    font-weight: bold;
}
.songList >view .order{
    color: #9d9b9b;
}
.songList > view:first-of-type .order,
.songList > view:nth-of-type(2) .order,
.songList > view:nth-of-type(3) .order{
    font-weight: bold;
    color: red;
}


.order{
    flex-basis: 50rpx;
}
.searchHistory .openBtn{
    height: 50rpx;
    width: 50rpx;
    line-height: 50rpx;
    text-align: center;
    border-radius: 50%;
    /*box-sizing: border-box;*/
    padding: 0;
}


