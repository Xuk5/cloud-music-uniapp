.container{
    padding: 0 30rpx;
}
.navHead{
    width: 100%;
    display: flex;
    height: 50rpx;
    line-height: 50rpx;
    box-sizing: border-box;
    z-index: 99;
    background-color: white;
}
.navHead view{
    flex-shrink: 0;
    margin-right: 60rpx;
    font-size: 30rpx;
}
.listRecommend{
    margin-top: 50rpx;
    margin-bottom: 50rpx;
}
.listRecommend>text{
    font-size: 40rpx;
    font-weight: bold;
    display: block;
    margin: 30rpx 0;
}
.top-rank-container{
    display: flex;
    justify-content: space-between;
}
.top-rank-container>view{
    width: 220rpx;
    height: 220rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    border-radius: 20rpx;
}
.top-rank-container>view:first-of-type{
    background-image: linear-gradient( #98b6e5, #a4d8ec);
}
.top-rank-container>view:nth-of-type(2){
    background-image: linear-gradient(#7d90ad, #b8def3);
}
.top-rank-container>view:nth-of-type(3){
    background-image: linear-gradient(#7ba24e, #bedca0);
    background-color: #7ba24e;
}
.bigTitle{
    width: 170rpx;
    text-align: center;
    height: 60rpx;
    color: white;
    font-weight: bold;
    font-size: 35rpx;
    border-bottom: 1rpx solid #eee;
}
.subTitle{
    height: 60rpx;
    line-height: 60rpx;
    color: gray;
    font-size: 28rpx;
}
.officialRank>view:first-of-type,
.rankDetail>view:first-of-type{
    font-weight: bold;
}
.rankDetail>view:first-of-type{
    font-size: 40rpx;
}

.rankDetail{
    background-color: darkgray;
    border-radius: 30rpx;
    padding: 20rpx 30rpx 20rpx 30rpx;
    height: 250rpx;
    margin: 30rpx 0 30rpx 0;
}
.songImg{
    width: 150rpx;
    height: 150rpx;
}
.songList{
    position: relative;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.songInfo{
    box-sizing: border-box;
    height: 100%;
    width: 450rpx;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    padding: 10rpx 20rpx;
}
.songInfo>view{
    width: 100%;
    white-space: nowrap;
    height: 60rpx;
    line-height: 60rpx;
    overflow: hidden;

}

.order{
    overflow: hidden;
    display: inline-block;
    height: 100%;
    width: 30rpx;
}
.songTitle{
    display: inline-block;
    height: 100%;
    overflow: hidden;
}
.singer{
    display: inline-block;
    width: 160rpx;
    height: 100%;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}