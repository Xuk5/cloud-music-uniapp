/* pages/index/index.wxss */
.container{
	position: relative;
}
.banner{
	width: 100%;
	height:300rpx;
	margin-top: 12vh;
}
.banner image{
	width: 100%;
	height: 100%
}
.navigator{
	width: 100%;
	height:150rpx;
	display: flex;
	justify-content: space-evenly;
	margin-top: 20rpx;
}
.navItem{
	width: 200rpx;
	height: 150rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: space-between;
}
.navItem>text:nth-child(2){
	font-size: 28rpx;
}
.navigator .iconfont{
	width: 100rpx;
	height: 100rpx;
	border-radius: 50%;
	background-color: skyblue;
	text-align: center;
	line-height: 100rpx;
	font-size: 50rpx;
	color: white;
}
.recommender{
	width: 100%;
	padding:0 16rpx ;
	box-sizing: border-box;
	margin-bottom: 40rpx;
	margin-top: 30rpx;

}

.albumList{
	display: flex;
	height: 300rpx;
	margin-top: 30rpx;

}
.album{
	display: flex;
	flex-direction: column;
	align-items: center;
	margin-right: 20rpx;
	width: 200rpx;
	height: 100%;
}
.albumList image{
	height: 200rpx;
	width: 200rpx;
	border-radius: 10%;
}
.album text{
	/*font-size: 26rpx;*/
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp:2;/*设置多行行数*/
	overflow: hidden;
	text-overflow: ellipsis;
}
.rankingArea{
	padding: 0 20rpx;
	height: 560rpx;
}
.ranking{
	height: 480rpx;
}
.rankingClass{
	margin-top: 30rpx;
}
.rankingName{
	display: block;
	margin-bottom: 30rpx;
}
.rankingSong{
	display: flex;
	justify-content: space-between;
	align-items: center;
	margin-bottom: 20rpx;
	width: 80%;
}
.rankingSong image{
	width: 100rpx;
	height: 100rpx;
	border-radius: 10%;
}
.rankingSong>text:first-of-type{
	height: 100rpx;
	width: 100rpx;
	line-height: 100rpx;
	text-align: center;
}
.rankingSong>text:last-of-type{
	width: 300rpx;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}
.searchHeader{
	width: 100% ;
	height: 10vh;
	position: fixed;
	top: 0vh;
	padding: 5vh 30rpx 10rpx 30rpx;
	display: flex;
	justify-content: space-between;
	box-sizing: border-box;
	background-color: white;
	z-index: 999;
}
.input{
	width: 350rpx;
	height: 55rpx;
	background-color: white;
	border-radius: 30rpx;
	padding:0 60rpx;
	font-size: 28rpx;
	border: 1rpx solid black;
	/*margin-top: 35rpx;*/
}
.clear{
	width: 60rpx;
	height: 60rpx;
	line-height: 60rpx;
	text-align: center;
	position: absolute;
	right: 120rpx;
	font-size: 45rpx;
}

.searchBtn::after{
	border: none;
}
.icon-search{
	position: absolute;
	height: 60rpx;
	width:60rpx;
	left: 30rpx;
	line-height: 60rpx;
	text-align: center;
	color: black;
	background-color: none;
}
