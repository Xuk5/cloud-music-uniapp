/* pages/index/index.wxss */
.banner{
	width: 100%;
	height:380rpx
}
.banner image{
	width: 100%;
	height: 100%
}
.navigator{
	width: 100%;
	height:150rpx;
	display: flex;
	justify-content: space-evenly;
	margin-top: 20rpx;
}
.navItem{
	width: 200rpx;
	height: 150rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: space-between;
}
.navItem>text:nth-child(2){
	font-size: 28rpx;
}
.iconfont{
	width: 100rpx;
	height: 100rpx;
	border-radius: 50%;
	background-color: skyblue;
	text-align: center;
	line-height: 100rpx;
	font-size: 50rpx;
	color: white;
}
.recommender{
	width: 100%;
	padding:0 16rpx ;
	box-sizing: border-box;
	margin-bottom: 40rpx;
	margin-top: 30rpx;

}

.albumList{
	display: flex;
	height: 300rpx;
	margin-top: 30rpx;

}
.album{
	display: flex;
	flex-direction: column;
	align-items: center;
	margin-right: 20rpx;
	width: 200rpx;
	height: 100%;
}
.albumList image{
	height: 200rpx;
	width: 200rpx;
	border-radius: 10%;
}
.album text{
	/*font-size: 26rpx;*/
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp:2;/*设置多行行数*/
	overflow: hidden;
	text-overflow: ellipsis;
}
.rankingArea{
	padding: 0 20rpx;
}
.ranking{
	height: 480rpx;
}
.rankingClass{
	margin-top: 30rpx;
}
.rankingName{
	display: block;
	margin-bottom: 30rpx;
}
.rankingSong{
	display: flex;
	justify-content: space-between;
	align-items: center;
	margin-bottom: 20rpx;
	width: 80%;
}
.rankingSong image{
	width: 100rpx;
	height: 100rpx;
	border-radius: 10%;
}
.rankingSong>text:first-of-type{
	height: 100rpx;
	width: 100rpx;
	line-height: 100rpx;
	text-align: center;
}
.rankingSong>text:last-of-type{
	width: 300rpx;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}
